<%= simple_form_for([:backend, @product]) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :name, label: 'Название товара' %>
    </div>
    <div class="col-md-3">
      <%= f.input :price, label: 'Цена' %>
    </div>
    <div class="col-md-3">
      <%= f.input :image, label: 'Изображение' %>
    </div>
    <div class="col-md-12">



      <%= f.input :description, as: :bootsy %>


    </div>
  
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Применить' %>
  </div>
<% end %>
