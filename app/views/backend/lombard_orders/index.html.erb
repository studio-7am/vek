<p id="notice"><%= notice %></p>

<h1>Список заявок с ломбарда</h1>

<table class="table">
  <thead>
    <tr>
      <th>Имя</th>
      <th>Телефон</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lombard_orders.each do |lombard_order| %>
      <tr>
        <td><%= lombard_order.name %></td>
        <td><%= lombard_order.phone %></td>
        <td><%= link_to 'Открыть', backend_lombard_order_path(lombard_order), class: 'btn btn-info btn-block btn-xs' %></td>
        <td><%= link_to 'Удалить', backend_lombard_order_path(lombard_order), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


