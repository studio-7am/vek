<%= simple_form_for(@tab) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.association :page %>
    <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Mini'} }%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
