<h1>Табы в ломбарде</h1>

<a class="btn btn-primary" href="/lombard_tabs/new">Добавить таб в ломбард</a>

<table class="table">
  <thead>
    <tr>
      <th>Заголовок</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lombard_tabs.each do |lombard_tab| %>
      <tr>
        <td><%= lombard_tab.title %></td>
        <td><%= link_to 'Редактировать', edit_lombard_tab_path(lombard_tab), class: 'btn btn-info btn-block btn-xs'%></td>
        <td><%= link_to 'Удалить', lombard_tab_path(lombard_tab), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


