<p id="notice"><%= notice %></p>

<div class="content">
<p>
  <strong>Заголовок страницы:</strong>
  <%= @page.title %>
</p>

<p>
  <strong>Описание страницы:</strong>
  <%= @page.description %>
</p>

<p>
  <strong>Опубликовано:</strong>
  <%= @page.publish %>
</p>


<p>
  <strong>Icon:</strong>
  <%= fa_icon @page.icon %>
</p>

<p>
  <strong>Bg:</strong>
  <%= @page.bg %>
</p>

<%= link_to 'Edit', edit_page_path(@page) %> |
<%= link_to 'Back', pages_path %>

</div>

<div class="page_tabs">
  



<div>


<ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">
      Home
    </a></li>
  <% @page.tabs.each do |t| %>
    <li role="presentation" class=""><a href="#<%= t.id %>" aria-controls="home" role="tab" data-toggle="tab">
      <%= t.title %>
    </a></li>
   <% end %>
</ul>


<div class="tab-content">
<div role="tabpanel" class="tab-pane active" id="home">
  <%= raw @page.content %>
</div>
  <% @page.tabs.each do |t| %>
    <div role="tabpanel" class="tab-pane" id="<%= t.id %>">
      <%= t.content %>
    </div>
  <% end %>
</div>


</div>

</div>

<div class="page_cover">
  <%= image_tag @page.cover %>
</div>


