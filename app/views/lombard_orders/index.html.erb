<p id="notice"><%= notice %></p>

<h1>Listing Lombard Orders</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Slug</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lombard_orders.each do |lombard_order| %>
      <tr>
        <td><%= lombard_order.number %></td>
        <td><%= lombard_order.slug %></td>
        <td><%= lombard_order.name %></td>
        <td><%= lombard_order.phone %></td>
        <td><%= lombard_order.email %></td>
        <td><%= link_to 'Show', lombard_order %></td>
        <td><%= link_to 'Edit', edit_lombard_order_path(lombard_order) %></td>
        <td><%= link_to 'Destroy', lombard_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

