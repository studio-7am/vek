<h1>Табы в магазине</h1>

<a class="btn btn-primary" href="/store_tabs/new">Добавить таб в магазин</a>

<table class="table">
  <thead>
    <tr>
      <th>Заголовок</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @store_tabs.each do |store_tab| %>
      <tr>
        <td><%= store_tab.title %></td>
        <td><%= link_to 'Редактировать', edit_store_tab_path(store_tab), class: 'btn btn-info btn-block btn-xs'%></td>
        <td><%= link_to 'Удалить', store_tab_path(store_tab), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>


